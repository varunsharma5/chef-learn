<% unless @port == 80 %>
Listen <%= @port %>
<% end %>
<VirtualHost *:<%= @port -%>>
        ServerAdmin webmaster@localhost
        DocumentRoot "<%= @document_root -%>"

        ErrorLog ${APACHE_LOG_DIR}/error.log
        CustomLog ${APACHE_LOG_DIR}/access.log combined
        <Directory "<%= @document_root -%>">
            Order allow,deny
            Allow from all
            Require all granted
        </Directory>
</VirtualHost>